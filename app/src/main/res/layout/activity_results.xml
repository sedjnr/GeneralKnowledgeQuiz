<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sed.generalknowledgequiz.Results"

    android:background="@color/colorPrimaryDark"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/QuestionText"
        android:paddingTop="24dp"
        android:paddingBottom="48dp"
        android:textAlignment="center"
        android:text="Thank you for playing\nYour final score is :" />

    <TextView
        android:id="@+id/displayAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AnswerText"
        android:padding="8dp"
        android:text="insert answers" />

    <TextView
        android:id="@+id/displayScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/QuestionText"
        android:padding="8dp"
        android:text="Your total score" />

    <Button
        android:id="@+id/answertoast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="View Answers"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Restart Quiz"
            />

    </LinearLayout>



</LinearLayout>
