<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sed.generalknowledgequiz.Question1"

    android:background="@color/colorPrimaryDark"
    android:padding="16dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/QuestionText"
        android:paddingTop="24dp"
        android:paddingBottom="48dp"
        android:text="@string/Q1" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp">
        <RadioButton
            android:id="@+id/latvia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AnswerText"
            android:text="Latvia"
            android:onClick="answerQ1"/>
        <RadioButton
            android:id="@+id/unitedkingdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AnswerText"
            android:text="United Kindom"
            android:onClick="answerQ1"/>
        <RadioButton
            android:id="@+id/australia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AnswerText"
            android:text="Australia"
            android:onClick="answerQ1"/>
        <RadioButton
            android:id="@+id/belgium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AnswerText"
            android:text="Belgium"
            android:onClick="answerQ1"/>

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/q1sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:text="Submit"
            />

    </LinearLayout>





</LinearLayout>
